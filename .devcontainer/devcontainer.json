{
    "context": "../",
    "dockerFile": "Dockerfile",
    "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-vscode.cpptools",
        "twxs.cmake",
        "ms-vscode.cmake-tools",
        "ms-iot.vscode-ros",
        "smilerobotics.urdf",
        "yzhang.markdown-all-in-one"
    ],

    // Install python packages from requirements.txt
    "postCreateCommand": "pip3 install -r requirements.txt && pip3 install -r requirements-ci.txt",

    // This will launch the container as a non-root user
    "remoteUser" : "ros"
}